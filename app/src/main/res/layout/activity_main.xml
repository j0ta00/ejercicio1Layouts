<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/txtNumbersResult"
        android:layout_width="157dp"
        android:layout_height="42dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:paddingLeft="70dp"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-150dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNumber1"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:text="1" />

            <Button
                android:id="@+id/btnNumber4"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="4" />

            <Button
                android:id="@+id/btnNumber7"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="7" />
            <Button
                android:id="@+id/btnNumber0"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="0" />
            <Button
                android:id="@+id/btnResult"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:text="=" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-138dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnNumber2"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="2" />
            <Button
                android:id="@+id/btnNumber5"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="5" />
            <Button
                android:id="@+id/btnNumber8"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="8"/>
            <Button
                android:id="@+id/btnDot"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-138dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNumber3"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="3" />

            <Button
                android:id="@+id/btnNumber6"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="6" />

            <Button
                android:id="@+id/btnNumber9"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:text="9" />
            <Button
                android:id="@+id/btnDivOpt"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:text="/" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-150dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnDelete"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:text="Delete" />

            <Button
                android:id="@+id/btnSubsOpt"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:text="-" />

            <Button
                android:id="@+id/btnMultOpt"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:text="*"

                />

            <Button
                android:id="@+id/btnSumOpt"
                android:layout_width="64dp"
                android:layout_height="42dp"
                android:layout_gravity="right"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>